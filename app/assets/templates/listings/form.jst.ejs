<div id="new-listing">
  <h3><%= listing.isNew() ? 'New Listing' : 'Edit Listing' %></h3><br>

  <% if (listing.errors) { %>
    <div class="alert alert-danger">
      <p><%= listing.errors %></p>
    </div>
  <% } %>

  <div class="form-group">
    <label for='title'>Title</label><br>
    <input class="form-control"
            placeholder="Title"
            type='text'
            name='title'
            id='title'
            value='<%= listing.escape('title') %>'
    ><br>
  </div>

  <div class="form-group">
    <label for='description'>Description</label><br>
    <textarea class='form-control'
              name='description'
              id='description'
              placeholder="Description"
              rows='5'
              value='<%= listing.escape('description') %>'
    ></textarea><br>
  </div>

  <div class="form-group">
    <label for="address-field">Address</label><br>
    <input type="text"
            class="form-control"
            id="pac-input"
            placeholder="Address"
    ></br>
  </div>

  <div class="btn-group">
    <button class="btn btn-primary">Submit</button>
    <a class="btn btn-info" href='#/'>Cancel</a>
  </div>
</div>
