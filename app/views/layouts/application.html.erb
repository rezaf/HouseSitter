<!DOCTYPE html>
<html>
<head>
  <title>HouseSitter</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav id="navbar" class="navbar">
  <ul class="navbar-header">
    <li>
      <% if signed_in? %>
      <h4 class="navbar-text"><%= current_user.username %></h4><%= button_to "Sign Out", session_url, method: :delete %>
      <% end %>
    </li>
  </ul>
</nav>

<%= yield %>

</body>
</html>
